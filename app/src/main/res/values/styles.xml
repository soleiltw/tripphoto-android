<resources>

	<style name="Theme.Tripphoto" parent="@style/Theme.AppCompat.Light.DarkActionBar">
		<item name="actionBarItemBackground">@drawable/selectable_background_tripphoto</item>
		<item name="popupMenuStyle">@style/PopupMenu.Tripphoto</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Tripphoto</item>
		<item name="actionBarTabStyle">@style/ActionBarTabStyle.Tripphoto</item>
		<item name="actionDropDownStyle">@style/DropDownNav.Tripphoto</item>
		<item name="actionBarStyle">@style/ActionBar.Solid.Tripphoto</item>
		<item name="actionModeBackground">@drawable/cab_background_top_tripphoto</item>
		<item name="actionModeSplitBackground">@drawable/cab_background_bottom_tripphoto</item>
		<item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Tripphoto</item>

		<!-- Light.DarkActionBar specific -->
		<item name="actionBarWidgetTheme">@style/Theme.Tripphoto.Widget</item>

	</style>

	<style name="ActionBar.Solid.Tripphoto" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
		<item name="background">@drawable/ab_solid_tripphoto</item>
		<item name="backgroundStacked">@drawable/ab_stacked_solid_tripphoto</item>
		<item name="backgroundSplit">@drawable/ab_bottom_solid_tripphoto</item>
		<item name="progressBarStyle">@style/ProgressBar.Tripphoto</item>
	</style>

	<style name="ActionBar.Transparent.Tripphoto" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/ab_transparent_tripphoto</item>
		<item name="progressBarStyle">@style/ProgressBar.Tripphoto</item>
	</style>

	<style name="PopupMenu.Tripphoto" parent="@style/Widget.AppCompat.PopupMenu">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_tripphoto</item>
	</style>

	<style name="DropDownListView.Tripphoto" parent="@style/Widget.AppCompat.ListView.DropDown">
		<item name="android:listSelector">@drawable/selectable_background_tripphoto</item>
	</style>

	<style name="ActionBarTabStyle.Tripphoto" parent="@style/Widget.AppCompat.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_tripphoto</item>
	</style>

	<style name="DropDownNav.Tripphoto" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
		<item name="android:background">@drawable/spinner_background_ab_tripphoto</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_tripphoto</item>
		<item name="android:dropDownSelector">@drawable/selectable_background_tripphoto</item>
	</style>

	<style name="ProgressBar.Tripphoto" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_tripphoto</item>
	</style>

	<style name="ActionButton.CloseMode.Tripphoto" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_tripphoto</item>
	</style>

	<!-- this style is only referenced in a Light.DarkActionBar based theme -->
	<style name="Theme.Tripphoto.Widget" parent="@style/Theme.AppCompat">
		<item name="popupMenuStyle">@style/PopupMenu.Tripphoto</item>
		<item name="dropDownListViewStyle">@style/DropDownListView.Tripphoto</item>
	</style>

</resources>
